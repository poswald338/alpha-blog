<div class="container"> 
  <div class="row">
    <div class="col-12 d-flex justify-content-center">
      <h1 class=" mt-2">Create a new category</h1>
    </div>
  </div>
  <hr>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
      <%= render 'shared/errors', obj: @category %>
      <%= form_with(model: @category, local: true) do |f| %>
      <div class="form-container shadow rounded mt-4 mb-4 p-3 bg-dark">
        <div class="mb-3">
          <%= f.label :name, "Category Name", class: "form-label fw-bold text-white-50" %>
          <%= f.text_field :name, class: "form-control", placeholder: "Enter a name" %>
        </div>
        <div class="d-flex">
          <div class="flex me-auto">
            <%= f.submit class: "btn btn-success" %>
          </div>
          <div class="flex">
            <%= link_to "Back to Articles", articles_path, class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


 

<% end %>